<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#d3d3d3" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="6dp"/>
            <padding
                android:left="15dp"
                android:right="15dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="6dp"/>
            <padding
                android:left="15dp"
                android:right="15dp"/>
        </shape>
    </item>
</selector>