<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/com_facebook_button_background_color" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="6dp"/>
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/com_facebook_button_background_color"
                android:endColor="@color/com_facebook_button_background_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="6dp"/>
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>
</selector>